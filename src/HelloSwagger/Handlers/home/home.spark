<viewdata model="HelloSwagger.Handlers.home.HomeModel" />
<content:head>
<style type="text/css">
  h2 {
  margin-bottom: 20px;
  }

  a#github img {
  position: absolute;
  top: 40px;
  right: 0;
  border: 0;
  }

  @media (min-width: 768px) and (max-width: 980px) {
  a#github img {   top: 50px; }
  }

  @media (max-width: 768px) {
  a#github img {   top: 50px; }
  }

  @media (max-width: 480px) {
  a#github {   display: none; }
  }
</style>

</content:head>

<content:pagehead>
  <h1>Automatic API documentation</h1>
  <small>FubuSwagger example web application</small>
</content:pagehead>
<a id="github" href="https://github.com/KevM/fubumvc-swagger">
    <img src="http://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png" alt="Fork me on GitHub">
</a>

<div class="row">
  <div class="span5">
    <div class="hero-unit">
      <h2>API Documentation </h2>
      <p>You build web sites.</p>
      <p><a class="btn btn-primary" href="${this.Urls.UrlFor<HelloSwagger.Handlers.api.lists.ListsRequest>()}">Simple example web inteface</a></p>
      <hr/>
      <p>FubuSwagger makes it easy to generate documentation which informs and enables web developers on how to use your APIs.</p>
      <p><a class="btn btn-primary btn-large" href="${this.Urls.UrlFor<FubuMVC.Swagger.Actions.SwaggerUIRequest>()}">Example API Documentation</a></p>
    </div>
  </div>
  
</div>